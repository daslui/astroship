---
// @ts-ignore
import { Icon } from "astro-icon/components";

const { features } = Astro.props;

// const ;
---

<div class="mt-16 md:mt-0">
  <h2 class="text-4xl lg:text-5xl text-slate-200 font-bold lg:tracking-tight">
    Deine neue Lieblingsbar
  </h2>
  <p class="text-lg mt-4 text-slate-200">
    Ob ihr Lust auf eine Runde Kicker, Darts habt oder einfach nur mit Freunden bei einem kühlen Getränk abhängen wollt,<wbr/>
    bei uns seid ihr genau richtig. 🍻
  </p>
</div>

<div class="grid sm:grid-cols-2 md:grid-cols-2 mt-16 gap-16">
  {
    features.map((item) => (
      <div class="flex gap-4 items-start">
        <div class="mt-1 bg-black rounded-full  p-2 w-8 h-8 shrink-0">
          <Icon class="text-white" name={item.icon} />
        </div>
        <div>
          <h3 class="font-semibold text-slate-200 text-lg">{item.title}</h3>{" "}
          <p class="text-slate-400 mt-2 leading-relaxed">{item.description}</p>
        </div>
      </div>
    ))
  }
</div>
